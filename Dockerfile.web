# Stage 1: Dependencies
FROM node:20-alpine AS deps
WORKDIR /app

# Copy root package files for monorepo setup
COPY package.json package-lock.json turbo.json ./
COPY packages/core ./packages/core
COPY apps/web ./apps/web

# Install dependencies
RUN npm ci

# Stage 2: Builder
FROM node:20-alpine AS builder
WORKDIR /app

# Copy package files and source code
COPY --from=deps /app/package.json ./package.json
COPY --from=deps /app/package-lock.json ./package-lock.json
COPY --from=deps /app/turbo.json ./turbo.json
COPY packages/core ./packages/core
COPY apps/web ./apps/web

# Install dependencies fresh in builder to ensure workspace linking works
# This is necessary because copying node_modules can break workspace symlinks
RUN npm ci

# Explicitly install required packages for Next.js standalone mode
RUN npm install styled-jsx @swc/helpers @next/env

# Build-time API URL â€” must be set before build so Next.js bakes it into the client (use https in production)
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

# Build the application (NEXT_PUBLIC_* is read at this step)
RUN npx turbo run build --filter=./apps/web

# Stage 3: Runner
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# 1. Copy the standalone build
COPY --from=builder /app/apps/web/.next/standalone ./

# 2. Copy static files to the ROOT .next folder (This fixes the 404s)
COPY --from=builder /app/apps/web/.next/static ./.next/static

# 3. Copy public files to the ROOT public folder (This fixes favicon/logo)
COPY --from=builder /app/apps/web/public ./public

# 4. Also copy them to the nested path for internal Next.js consistency
COPY --from=builder /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder /app/apps/web/public ./apps/web/public

EXPOSE 3000

# Start the server
CMD ["node", "server.js"]
