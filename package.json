{
  "name": "tofa-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.8.2", 
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "android": "cd apps/mobile && npx react-native run-android",
    "ios": "cd apps/mobile && npx react-native run-ios",
    "mobile:start": "cd apps/mobile && npm run start",
    "mobile:android": "cd apps/mobile && npx react-native run-android",
    "mobile:ios": "cd apps/mobile && npx react-native run-ios"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
